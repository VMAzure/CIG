@{
    ViewData["Title"] = "Generatore Immagini Auto";
}

<div class="container">
    <div class="content-wrapper">
        <!-- Colonna sinistra: Controlli -->
        <!-- Titolo Dinamico -->
        <div id="imageTitle">
            <span id="selectedMake" style="font-weight: bold; font-size: 18px;">Brand </span>
            <span id="selectedModel" style="font-weight: normal; font-size: 18px;">Model</span>
        
            <!-- Marca -->
            <label for="marca">Marca:</label>
            <select id="marca" class="dropdown"></select>

            <!-- Modello -->
            <label for="modello">Modello:</label>
            <select id="modello" class="dropdown"></select>

            <!-- Versione -->
            <label for="versione">Versione:</label>
            <select id="versione" class="dropdown"></select>

            <!-- Model Variant -->
            <label for="modelVariant">Variante:</label>
            <select id="modelVariant" class="dropdown"></select>


            <button id="genera" class="btn-generate">Genera Immagine</button>

            <!-- Bottone per colorare l'auto -->
            <button id="colorCarBtn" class="btn-color" disabled>Colora l'Auto</button>

            <!-- Color Picker -->
            <input type="color" id="colorPicker" style="display: none;">

            <!-- Bottone per scaricare l'immagine -->
            <button id="downloadImageBtn" class="btn-generate" disabled>Scarica l'Immagine</button>

        </div>

        <!-- Colonna destra: Canvas + Video -->
        <div class="canvas-wrapper">
            <div class="tabs-container">
                <button id="tab360" class="tab active">Vista 360°</button>
                <button id="tabSpeciali" class="tab">Viste Speciali</button>
            </div>

            <div class="canvas-container">
                <!-- Video di sfondo del canvas -->
                <video id="backgroundVideo" autoplay loop muted playsinline class="canvas-background">
                    <source src="/video/canvas.mp4" type="video/mp4">
                </video>

                <!-- Canvas sopra il video -->
                <canvas id="imageCanvas"></canvas>
                <div id="loader" style="display:none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>

                <!-- Slider contenitore -->
                <div id="angleSliderContainer">
                    <input type="range" id="angleSlider" min="200" max="231" value="200" class="slider">
                </div>

                <!-- Contenitore Thumbnails Speciali -->
                <div id="specialThumbsContainer" style="display: none; justify-content: center; gap: 5px;">
                    
                    <img class="thumb-speciale" data-angle="17" src="#" alt="Vista Speciale 17">
                    <img class="thumb-speciale" data-angle="21" src="#" alt="Vista Speciale 21">
                    <img class="thumb-speciale" data-angle="25" src="#" alt="Vista Speciale 25">
                    <img class="thumb-speciale" data-angle="27" src="#" alt="Vista Speciale 27">
                    <img class="thumb-speciale" data-angle="51" src="#" alt="Vista Speciale 51">
                    <img class="thumb-speciale" data-angle="33" src="#" alt="Vista Speciale 33">

                </div>
            </div>
        </div>



    </div>
</div>

<!-- Script per gestire le API -->
<script src="~/js/site.js"></script>
<link rel="stylesheet" href="~/css/site.css">
