@{
    ViewData["Title"] = "Generatore Immagini Auto";
}

<div class="container">
    <div class="content-wrapper">
        <!-- Colonna sinistra: Controlli -->
        <div class="controls">
            <h2>Configura l'immagine</h2>

            <!-- Marca -->
            <label for="marca">Marca:</label>
            <select id="marca" class="dropdown"></select>

            <!-- Modello -->
            <label for="modello">Modello:</label>
            <select id="modello" class="dropdown"></select>

            <!-- Versione -->
            <label for="versione">Versione:</label>
            <select id="versione" class="dropdown"></select>

            <!-- Zoom Type 
            <label for="zoomType">Tipo di Zoom:</label>
            <select id="zoomType" class="dropdown">
                <option value="relative">Relative</option>
                <option value="fullscreen">Fullscreen</option>
                <option value="adaptive">Adaptive</option>
            </select>-->
            <!-- Zoom Level 
            <label for="zoomLevel">Livello di Zoom:</label>
            <input type="range" id="zoomLevel" min="0" max="30" value="15" class="slider">
            -->

            <button id="genera" class="btn-generate">Genera Immagine</button>
        </div>

        <!-- Colonna destra: Canvas + Slider -->
        <div class="canvas-wrapper">
            <div class="canvas-container">
                <h2>Anteprima Immagine</h2>

                <!-- Video iniziale -->
                <video id="previewVideo" autoplay loop muted playsinline style="max-width: 800px;">
                    <source src="video/preview.mp4" type="video/mp4">
                    Il tuo browser non supporta il tag video.
                </video>

                <!-- Canvas inizialmente nascosto -->
                <canvas id="imageCanvas" style="max-width: 800px; display: none;"></canvas>
            </div>
        </div>


            <!-- Slider Rotazione (orizzontale sotto al canvas, disattivato inizialmente) -->
            <label for="angleSlider">Rotazione Auto:</label>
            <input type="range" id="angleSlider" min="200" max="231" value="203" class="slider" disabled>

            <!-- Slider verticale accanto al canvas per spostare l'immagine 
            <input type="range" id="verticalSlider" min="-50" max="50" value="0"
                   class="slider-vertical">
                   -->
        </div>
    </div>
</div>

<!-- Script per gestire le API -->
<script src="~/js/site.js"></script>
<link rel="stylesheet" href="~/css/site.css">
