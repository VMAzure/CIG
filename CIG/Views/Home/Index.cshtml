@model CIG.Models.HomeViewModel


@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Benvenuto su CIG 🚀</h1>

    <!-- Informazioni utente (Token) -->
    <h2>Informazioni utente (Token)</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Claim</th>
                <th>Valore</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.Key</td>
                    <td>@claim.Value</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Configurazione IMAGIN.studio -->
    <h2>Configurazione IMAGIN.studio</h2>
    <ul>
        @foreach (var config in Model.Config)
        {
            <li><strong>@config.Key:</strong> @config.Value</li>
        }
    </ul>

    <!-- Form per i parametri di immagine -->
    <h2>Parametri per l'immagine</h2>
    <form id="imageForm">
        <!-- Dropdown Marca -->
        <div class="form-group">
            <label for="brandDropdown">Marca</label>
            <select id="brandDropdown" class="form-control" name="make">
                <option value="">-- Seleziona Marca --</option>
                @foreach (var brand in Model.Brands)
                {
                    <option value="@brand">@brand</option>
                }
            </select>
        </div>

        <!-- Dropdown Modello (Gamma) -->
        <div class="form-group">
            <label for="gammaDropdown">Modello (Gamma)</label>
            <select id="gammaDropdown" class="form-control" name="modelFamily">
                <option value="">-- Seleziona Modello --</option>
                @foreach (var gamma in Model.Gammas)
                {
                    <option value="@gamma">@gamma</option>
                }
            </select>
        </div>

        <!-- Dropdown Anno Modello -->
        <div class="form-group">
            <label for="yearDropdown">Anno Modello</label>
            <select id="yearDropdown" class="form-control" name="modelYear">
                <option value="">-- Seleziona Anno --</option>
                @foreach (var year in Model.ModelYears)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>

        <!-- Dropdown Versione -->
        <div class="form-group">
            <label for="versioneDropdown">Versione</label>
            <select id="versioneDropdown" class="form-control" name="versione">
                <option value="">-- Seleziona Versione --</option>
                @foreach (var versione in Model.Versiones)
                {
                    <option value="@versione">@versione</option>
                }
            </select>
        </div>

        <!-- Dropdown Allestimento -->
        <div class="form-group">
            <label for="allestimentoDropdown">Allestimento</label>
            <select id="allestimentoDropdown" class="form-control" name="allestimento">
                <option value="">-- Seleziona Allestimento --</option>
                @foreach (var allestimento in Model.Allestimentos)
                {
                    <option value="@allestimento">@allestimento</option>
                }
            </select>
        </div>

        <!-- Dropdown Tipo Alimentazione -->
        <div class="form-group">
            <label for="tipoAlimentazioneDropdown">Tipo Alimentazione</label>
            <select id="tipoAlimentazioneDropdown" class="form-control" name="tipoAlimentazione">
                <option value="">-- Seleziona Tipo Alimentazione --</option>
                @foreach (var tipo in Model.TipoAlimentaziones)
                {
                    <option value="@tipo">@tipo</option>
                }
            </select>
        </div>

        <!-- Qui potresti aggiungere altri campi (angle, zoomLevel, ecc.) -->
        <button type="submit" class="btn btn-primary">Recupera Immagine</button>
    </form>

    <!-- Canvas per mostrare l'immagine -->
    <h2>Immagine</h2>
    <canvas id="imageCanvas" width="400" height="300" style="border:1px solid #ccc;">
        Il tuo browser non supporta il canvas.
    </canvas>
</div>

<script>
    // Caricamento immagine di default (placeholder o configurazione)
    var defaultImageUrl = "@(Model.Config.ContainsKey("cover_image_url_default") ? Model.Config["cover_image_url_default"] : "https://via.placeholder.com/400x300")";

    var canvas = document.getElementById("imageCanvas");
    var ctx = canvas.getContext("2d");
    var img = new Image();
    img.onload = function() {
        ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
    };
    img.src = defaultImageUrl;

    // Gestione del submit del form per costruire l'URL dell'immagine
    document.getElementById("imageForm").addEventListener("submit", function(e) {
        e.preventDefault();

        // Leggi i valori selezionati
        var make = document.getElementById("brandDropdown").value;
        var modelFamily = document.getElementById("gammaDropdown").value;
        var modelYear = document.getElementById("yearDropdown").value;
        var versione = document.getElementById("versioneDropdown").value;
        var allestimento = document.getElementById("allestimentoDropdown").value;
        var tipoAlimentazione = document.getElementById("tipoAlimentazioneDropdown").value;

        // Recupera i parametri fissi dalla configurazione (passati via Razor)
        var config = {
            customer: "@Model.Config["customer"]",
            tailoring: "@Model.Config["tailoring"]",
            fileType: "@Model.Config["filetype"]",
            safeMode: "@Model.Config["safemode"]",
            billingTag: "@Model.Config["billingtag"]"
        };

        // Costruisci l'URL per l'API getImage
        var url = "https://cdn.imagin.studio/getImage" +
                  "?customer=" + encodeURIComponent(config.customer) +
                  "&tailoring=" + encodeURIComponent(config.tailoring) +
                  "&make=" + encodeURIComponent(make) +
                  "&modelFamily=" + encodeURIComponent(modelFamily) +
                  (modelYear ? "&modelYear=" + encodeURIComponent(modelYear) : "") +
                  (versione ? "&versione=" + encodeURIComponent(versione) : "") +
                  (allestimento ? "&allestimento=" + encodeURIComponent(allestimento) : "") +
                  (tipoAlimentazione ? "&tipoAlimentazione=" + encodeURIComponent(tipoAlimentazione) : "") +
                  "&fileType=" + encodeURIComponent(config.fileType) +
                  "&safeMode=" + encodeURIComponent(config.safeMode) +
                  "&billingTag=" + encodeURIComponent(config.billingTag);

        // Aggiorna il canvas con la nuova immagine
        var newImg = new Image();
        newImg.onload = function() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.drawImage(newImg, 0, 0, canvas.width, canvas.height);
        };
        newImg.src = url;
    });
</script>

