@{
    ViewData["Title"] = "Generatore Immagini Auto";
}

<div class="container">
    <div class="content-wrapper">
        <!-- Colonna sinistra: Controlli -->
        <div class="controls">
            <h2>Configura l'immagine</h2>

            <!-- Marca -->
            <label for="marca">Marca:</label>
            <select id="marca" class="dropdown"></select>

            <!-- Modello -->
            <label for="modello">Modello:</label>
            <select id="modello" class="dropdown"></select>

            <!-- Versione -->
            <label for="versione">Versione:</label>
            <select id="versione" class="dropdown"></select>

            <!-- Zoom Type -->
            <label for="zoomType">Tipo di Zoom:</label>
            <select id="zoomType" class="dropdown">
                <option value="relative">Relative</option>
                <option value="fullscreen">Fullscreen</option>
                <option value="adaptive">Adaptive</option>
            </select>

            <button id="genera" class="btn-generate">Genera Immagine</button>
        </div>

        <!-- Slider Rotazione (inizialmente disattivato) -->
        <label for="angleSlider">Rotazione Auto:</label>
        <input type="range" id="angleSlider" min="0" max="231" value="0" class="slider" disabled>

        <!-- Slider verticale accanto al canvas per spostare l'immagine -->
        <input type="range" id="verticalSlider" min="-15" max="16" value="0"
               style="writing-mode: vertical-lr; direction: rtl; height: 300px;">

    </div>
    <!-- Contenitore Canvas -->
    <div class="canvas-container">
        <h2>Anteprima Immagine</h2>
        <canvas id="imageCanvas"></canvas>
    </div>

</div>

<!-- Script per gestire le API -->
<script src="~/js/site.js"></script>
<link rel="stylesheet" href="~/css/site.css">
